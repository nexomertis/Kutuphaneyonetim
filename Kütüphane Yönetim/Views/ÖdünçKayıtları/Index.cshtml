@model IEnumerable<KutuphaneyYonetim.Models.ÖdünçKaydı>

@{
    ViewData["Title"] = "Ödünç Kayıtları";
}

<h1>Ödünç Kayıtları</h1>

<a href="@Url.Action("Create")" class="btn btn-primary mb-3">Yeni Ödünç Kaydı Ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Üye Adı</th>
            <th>Kitap Başlığı</th>
            <th>Ödünç Tarihi</th>
            <th>İade Tarihi</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kayıt in Model)
        {
            <tr>
                <td>@kayıt.Üye.Ad @kayıt.Üye.Soyad</td>
                <td>@kayıt.Kitap.Baslik</td>
                <td>@kayıt.ÖdünçTarihi.ToString("dd.MM.yyyy")</td>
                <td>
                    @if (kayıt.İadeTarihi.HasValue)
                    {
                        @kayıt.İadeTarihi.Value.ToString("dd.MM.yyyy")
                    }
                    else
                    {
                        <span class="badge badge-warning">İade Edilmedi</span>
                    }
                </td>
                <td>
                    @if (kayıt.İadeTarihi.HasValue)
                    {
                        <span class="badge badge-success">Tamamlandı</span>
                    }
                    else
                    {
                        <span class="badge badge-info">Devam Ediyor</span>
                    }
                </td>
                <td>
                    <a href="@Url.Action("Delete", new { id = kayıt.Id })" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
