@model KutuphaneyYonetim.Models.Üye

@{
    ViewData["Title"] = "Profilim";
}

<h1>Profilim</h1>

<div class="card" style="max-width: 500px;">
    <div class="card-body">
        <h5 class="card-title">@Model.Ad @Model.Soyad</h5>
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
        <p class="card-text"><strong>Telefon:</strong> @Model.TelefonNumarası</p>
        <p class="card-text"><strong>Üyelik Tarihi:</strong> @Model.OluşturulmaTarihi.ToString("dd.MM.yyyy")</p>
    </div>
</div>

<div class="mt-3">
    <a href="@Url.Action("Gecmisim", "Kitaplar")" class="btn btn-info">Ödünç Geçmişim</a>
    <a href="@Url.Action("Kitaplarim", "Kitaplar")" class="btn btn-success">Şu An Elimdeki Kitaplar</a>
</div>
